            <Setter Property="ItemsControl.FontSize" Value="16"/>
            <Setter Property="ItemsControl.FontWeight" Value="Bold"/>
            <Setter Property="ItemsControl.Padding" Value="0"/>
            <Setter Property="ItemsControl.HorizontalAlignment" Value="Stretch"/>
            <Setter Property="ItemsControl.HorizontalContentAlignment" Value="Center"/>
            <Setter Property="ItemsControl.Foreground" Value="White"/>
            <Setter Property="ItemsControl.Background" Value="#0b0b0b"/>
        </Style>

        <!-- Основной стиль таблицы /-->
        <Style x:Key="commonStyle" >
            <Setter Property="ItemsControl.FontFamily" Value="Segoe UI"/>
            <Setter Property="ItemsControl.FontSize" Value="16"/>
            <Setter Property="ItemsControl.FontWeight" Value="DemiBold"/>
            <Setter Property="ItemsControl.Padding" Value="0"/>
            <Setter Property="ItemsControl.HorizontalAlignment" Value="Stretch"/>
            <Setter Property="ItemsControl.Foreground" Value="White"/>
        </Style>

