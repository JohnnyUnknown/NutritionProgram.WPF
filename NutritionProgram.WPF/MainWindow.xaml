                        <Border BorderBrush="Black" BorderThickness="1,0,0,0" Grid.Column="5" Grid.RowSpan="12"/>


                    </Grid>
                </ScrollViewer>



                <TextBox x:Name="changeDinner" Text="Ужин" Grid.Column="1" Grid.Row="24" Grid.ColumnSpan="5" IsReadOnly="True" BorderThickness="2"
                         BorderBrush="Black" Style="{StaticResource ResourceKey=nameOfTheMealStyle}" MouseDown="changeDinner_MouseDown" Focusable="False"/>
                <ScrollViewer Grid.Column="1" Grid.Row="25" Grid.ColumnSpan="5" MaxHeight="108" VerticalAlignment="Top" VerticalScrollBarVisibility="Hidden">
                    <Grid x:Name="Dinner">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="120"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition MinWidth="80" MaxWidth="130"/>
                            <ColumnDefinition MinWidth="80" MaxWidth="130"/>
                            <ColumnDefinition MinWidth="80" MaxWidth="130"/>
                            <ColumnDefinition MinWidth="80" MaxWidth="130"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border BorderBrush="Black" BorderThickness="1,0,1,0" Grid.Column="1" Grid.RowSpan="12"/>
                        <Border BorderBrush="Black" BorderThickness="1,0,1,0" Grid.Column="3" Grid.RowSpan="12"/>
                        <Border BorderBrush="Black" BorderThickness="1,0,0,0" Grid.Column="5" Grid.RowSpan="12"/>


                    </Grid>
                </ScrollViewer>



                <TextBox x:Name="changeSupper" Text="Поздний ужин" Grid.Column="1" Grid.Row="27" Grid.ColumnSpan="5" IsReadOnly="True" BorderThickness="2"
                         BorderBrush="Black" Style="{StaticResource ResourceKey=nameOfTheMealStyle}" MouseDown="changeSupper_MouseDown" Focusable="False"/>
                <ScrollViewer Grid.Column="1" Grid.Row="28" Grid.ColumnSpan="5" MaxHeight="108" VerticalAlignment="Top" VerticalScrollBarVisibility="Hidden">
                    <Grid x:Name="Supper">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="120"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition MinWidth="80" MaxWidth="130"/>
                            <ColumnDefinition MinWidth="80" MaxWidth="130"/>
                            <ColumnDefinition MinWidth="80" MaxWidth="130"/>
                            <ColumnDefinition MinWidth="80" MaxWidth="130"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border BorderBrush="Black" BorderThickness="1,0,1,0" Grid.Column="1" Grid.RowSpan="12"/>
                        <Border BorderBrush="Black" BorderThickness="1,0,1,0" Grid.Column="3" Grid.RowSpan="12"/>
                        <Border BorderBrush="Black" BorderThickness="1,0,0,0" Grid.Column="5" Grid.RowSpan="12"/>


                    </Grid>
                </ScrollViewer>

            </Grid>
        </ScrollViewer>





        <ScrollViewer Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--<TextBlock x:Name="LabelProducts" Text="Список продуктов" Grid.Column="1" Grid.ColumnSpan="8" 
                   FontWeight="Bold" FontFamily="Bookman Old Style" Margin="0,2,0,6" FontSize="18"
                   Foreground="Black" HorizontalAlignment="Center" Padding="0"/>-->

                <Grid x:Name="PanelProducts" Grid.Row="1" Grid.Column="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="190"/>
                        <ColumnDefinition MinWidth="80" MaxWidth="130"/>
                        <ColumnDefinition MinWidth="80" MaxWidth="130"/>
                        <ColumnDefinition MinWidth="80" MaxWidth="130"/>
                        <ColumnDefinition MinWidth="80" MaxWidth="130"/>
                        <ColumnDefinition Width="19"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Row="0" Grid.RowSpan="35" Grid.ColumnSpan="6" VerticalScrollBarVisibility="Hidden">
                        <GroupBox x:Name="ProductsLibrary" Header="Список продуктов" FontSize="18" FontWeight="Bold" 
                                  Foreground="White" FontFamily="Verdana" BorderBrush="Black" BorderThickness="2">
                            <ListView x:Name="productsLibrary" ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct}"
                                      Background="#0b0b0b">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <WrapPanel Margin="5,2,0,2">
                                            <TextBlock Style="{StaticResource ResourceKey=nutritionStyle}" 
                                                       Text="{Binding Path=ProductName}" MaxHeight="20" MinWidth="200"/>
                                            <TextBlock Style="{StaticResource ResourceKey=nutritionStyle}" MinWidth="100" MaxWidth="160" 
                                                       Text="{Binding Path=ProductKcal}" MaxHeight="20" Foreground="ForestGreen"/>
                                            <TextBlock Style="{StaticResource ResourceKey=nutritionStyle}" MinWidth="130" MaxWidth="160"
                                                       Text="{Binding Path=ProductProtein}" MaxHeight="20" Foreground="LightSkyBlue"/>
                                            <TextBlock Style="{StaticResource ResourceKey=nutritionStyle}" MinWidth="130" MaxWidth="160"
                                                       Text="{Binding Path=ProductFat}" MaxHeight="20" Foreground="Orange"/>
                                            <TextBlock Style="{StaticResource ResourceKey=nutritionStyle}" MinWidth="130" MaxWidth="160" 
                                                       Text="{Binding Path=ProductCarbo}" MaxHeight="20" Foreground="Salmon"/>
                                        </WrapPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </GroupBox>
                    </ScrollViewer>


                </Grid>

                <Grid Grid.Column="1" Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <GroupBox Header="Управление рационом" Grid.ColumnSpan="2" Style="{StaticResource ResourceKey=commonStyle}"
                              Margin="0,0,2,0" Background="#0b0b0b"/>

                    <GroupBox Header="Список продуктов" Grid.Column="2" Grid.ColumnSpan="2" Background="#0b0b0b" 
                              Style="{StaticResource ResourceKey=commonStyle}" Margin="0,0,2,0"/>


                    <Button x:Name="addToNytritionButton" HorizontalAlignment="Center" Width="105" Height="40" 
                            BorderBrush="ForestGreen" BorderThickness="2" Margin="6,8,2,0">
                        <TextBlock Text="Добавить в рацион" TextWrapping="Wrap" FontFamily="Verdana" FontSize="13" FontWeight="DemiBold" 
                                   HorizontalAlignment="Center" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"/>
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="ForestGreen" Offset="0"/>
                                <GradientStop Color="#FF8EC68E" Offset="0.6"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <Button x:Name="delToNytritionButton" Grid.Column="1" HorizontalAlignment="Center" Width="105" Height="40" 
                            BorderBrush="Crimson" BorderThickness="2" Margin="2,8,8,0">
                        <TextBlock Text="Удалить из рациона" TextWrapping="Wrap" FontFamily="Verdana" FontSize="13" FontWeight="DemiBold" 
                                   HorizontalAlignment="Center"/>
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Red" Offset="0"/>
                                <GradientStop Color="Salmon" Offset="0.6"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    
                    <Button x:Name="addProductButton" Grid.Column="2" HorizontalAlignment="Center" Width="105" 
                            Height="40" BorderBrush="ForestGreen" BorderThickness="2" Margin="6,8,2,0">
                        <TextBlock Text="Новый продукт" TextWrapping="Wrap" FontFamily="Verdana" FontSize="13" FontWeight="DemiBold" 
                                   HorizontalAlignment="Center"/>
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="ForestGreen" Offset="0"/>
                                <GradientStop Color="#FF8EC68E" Offset="0.6"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <Button x:Name="delProductButton" Grid.Column="3" HorizontalAlignment="Center" Width="105" 
                            Height="40" BorderBrush="Crimson" BorderThickness="2" Margin="2,8,8,0">

                        <TextBlock Text="Удалить продукт" TextWrapping="Wrap" FontFamily="Verdana" FontSize="13" FontWeight="DemiBold" 
                                   HorizontalAlignment="Center"/>

                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Red" Offset="0"/>
                                <GradientStop Color="Salmon" Offset="0.6"/>
                            </LinearGradientBrush>
                        </Button.Background>

                    </Button>


                    <Button x:Name="exitButton" Grid.Column="5" HorizontalAlignment="Center" Width="105" 
                            Height="40" BorderBrush="Crimson" BorderThickness="2" Margin="2,8,8,0">

                        <TextBlock Text="Выход" TextWrapping="Wrap" FontFamily="Verdana" FontSize="13" FontWeight="DemiBold" 
                                   HorizontalAlignment="Center"/>

                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Red" Offset="0"/>
                                <GradientStop Color="Salmon" Offset="0.6"/>
                            </LinearGradientBrush>
                        </Button.Background>

                    </Button>
                    

                </Grid>

            </Grid>
        </ScrollViewer>

    </Grid>
</Window>
